<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/commonSpacingSmall"
    tools:context="ru.netology.linkedin_network.ui.ChoosePostUsersFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonSpacingXXLarge">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/commonSpacingXXLarge"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/card_user_to_choose" />

    </ScrollView>

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/commonSpacingMedium"
        android:layout_marginBottom="@dimen/commonSpacingSmall"
        android:background="@drawable/button_background_rounded"
        android:text="@string/add" />

</LinearLayout>